1.	TotalSales = SUM('Sales'[SalesAmount])
2.	Profit = SUM('Sales'[SalesAmount]) - SUM('Costs'[CostAmount])
3.	Loss = SUM('Losses'[LossAmount])
4.	NetProfit = [Profit] - [Loss]
5.	AvgSalesPrice = DIVIDE([Total Sales], [Total Units])
6.	TotalUnitsSold = SUM('Sales'[Quantity])
7.	MaxSalesAmount = MAX('Sales'[SalesAmount])
8.	MinSalesAmount = MIN('Sales'[SalesAmount])
9.	YTD_Sales = TOTALYTD([Total Sales], 'Date'[Date])
10.	MTD_Sales = TOTALMTD([Total Sales], 'Date'[Date])
11.	TopNProducts = TOPN(5, ALL('Products'), [Total Sales], DESC)
12.	RunningTotal = CALCULATE([Total Sales], FILTER(ALL('Date'), 'Date'[Date] <= MAX('Date'[Date])))
13.	GrossMarginPercentage = DIVIDE([Profit], [Total Sales])
14.	TotalCost = SUM('Costs'[CostAmount])
15.	AvgProfitPerUnit = DIVIDE([Profit], [Total Units])
16.	OrderCount = COUNTROWS('Orders')
17.	DistinctCustomers = COUNTROWS(DISTINCT('Customers'))
18.	RankProducts = RANKX(ALL('Products'), [Total Sales], , DESC)
19.	SalesGrowthPercentage = DIVIDE([Total Sales] - [Total Sales], [Total Sales])
20.	CumulativeSalesGrowth = (PRODUCT(1 + [Sales Growth Percentage]) - 1) * 100
21.	TotalSalesSelectedYear = CALCULATE([Total Sales], FILTER(ALL('Date'), 'Date'[Year] = SELECTEDVALUE('Date'[Year])))
22.	TotalSalesSelectedMonth = CALCULATE([Total Sales], FILTER(ALL('Date'), 'Date'[Month] = SELECTEDVALUE('Date'[Month])))
23.	ChurnRate = DIVIDE(COUNTROWS(FILTER('Customers', 'Customers'[Churn] = "Yes")), COUNTROWS('Customers'))
24.	AvgTimeBetweenOrders = AVERAGEX('Orders', DATEDIFF(MAX('Orders'[OrderDate]), MIN('Orders'[OrderDate]), DAY))
25.	TopNSales = CALCULATE([Total Sales], TOPN(20, ALL('Products'), [Total Sales], DESC))
26.	%ChangePrevMonth = DIVIDE([Total Sales] - CALCULATE([Total Sales], PREVIOUSMONTH('Date'[Date])), CALCULATE([Total Sales], PREVIOUSMONTH('Date'[Date])))
27.	SalesLastNDays = CALCULATE([Total Sales], 'Date'[Date] > TODAY() - 7)
28.	ActiveCustomers = COUNTROWS(FILTER('Customers', 'Customers'[LastPurchaseDate] > TODAY() - 30))
29.	WeightedAvgPrice = SUMX('Products', 'Products'[Price] * 'Products'[Quantity]) / SUM('Products'[Quantity])
30.	%HighSalesCustomers = DIVIDE(COUNTROWS(FILTER('Customers', [Total Sales] > 10000)), [Distinct Customers])
31.	SalesExcludingTopN = CALCULATE([Total Sales], ALL('Products'), NOT('Products'[ProductID] IN VALUES('TopNProducts'[ProductID])))
32.	SalesLastNYears = CALCULATE([Total Sales], DATESINPERIOD('Date'[Date], TODAY(), -2, YEAR))
33.	CustomersMultiplePurchases = COUNTROWS(FILTER('Customers', CALCULATE(COUNTROWS('Orders'), ALLEXCEPT('Orders', 'Orders'[CustomerID])) > 1))
34.	TopNCustomersSales = CALCULATE([Total Sales], TOPN(5, ALL('Customers'), [Total Sales], DESC))
35.	BottomNCustomersSales = CALCULATE([Total Sales], TOPN(5, ALL('Customers'), [Total Sales], ASC))
36.	TotalSalesSelectedRegion = CALCULATE([Total Sales], FILTER(ALL('Sales'[Region]), 'Sales'[Region] = SELECTEDVALUE('Sales'[Region])))
37.	%OnlineSales = DIVIDE(SUMX(FILTER('Orders', 'Orders'[OrderType] = "Online"), 'Orders'[SalesAmount]), [Total Sales])
38.	SalesCurrentMonthLastYear = CALCULATE([Total Sales], SAMEPERIODLASTYEAR('Date'[Date]))
39.	AvgTimeBetweenOrdersPerCustomer = AVERAGEX(FILTER('Orders', 'Orders'[CustomerID] = EARLIER('Orders'[CustomerID])), DATEDIFF(MAX('Orders'[OrderDate]), MIN('Orders'[OrderDate]), DAY))
40.	%LowStockProducts = DIVIDE(COUNTROWS(FILTER('Products', 'Products'[Stock] < 10)), COUNTROWS('Products'))
41.	TotalSalesSelectedProduct = CALCULATE([Total Sales], FILTER(ALL('Products'), 'Products'[ProductID] = SELECTEDVALUE('Products'[ProductID])))

